.normal-box
  background: $color-white
  padding: 0 20px
  box-sizing: border-box

.table
  position: relative
  flex: 1
  display: flex
  flex-direction: column
  .table-content
    display: flex
    padding: 0 20px
    background: $color-white
    flex-direction: column
    flex: 1

.tab-header
  height: 80px
  display: flex
  align-items: center
  box-sizing: border-box
  background: $color-white
  .tab-box
    margin-right: 10px

.big-list
  max-height: 750px
  background: $color-white
  overflow: visible
  display: flex
  flex-direction: column
  flex: 1

.list-header
  height: 50px
  font-family: $font-family-regular
  color: $color-text-main
  background: #F5F7FA
  &:after
    content: ""
    pointer-events: none // 解决iphone上的点击无效Bug
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-top: 1px solid #E9ECEE
    border-bottom: 0.5px solid #E9ECEE
    box-sizing border-box
    width: 100%
    height: 200%
    transform: scaleY(.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width: 100%
      height: 300%
      transform: scaleY(1 / 3) translateZ(0)
  .list-item
    font-size: $font-size-14
    display: flex
    align-items: center

.list-box
  padding-left: 30px
  box-sizing: border-box
  border-bottom-1px(#E9ECEE)
  display: flex
  align-items: center
  &:before
    content: ""
    pointer-events: none // 解决iphone上的点击无效Bug
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-right: 1px solid #E9ECEE
    border-left: 1px solid #E9ECEE
    box-sizing border-box
    width: 200%
    height: 100%
    transform: scaleX(.5) translateZ(0)
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
      width: 100%
      height: 300%
      transform: scaleX(1 / 3) translateZ(0)
  .list-item
    box-sizing: border-box
    padding-right: 10px
    flex: 1
    .list-img
      width: 50px
      height: @width
      object-fit: cover
      overflow: hidden
      border-radius: 50%

.list
  flex: 1
  .list-content
    font-family: $font-family-regular
    color: $color-text-main
    height: 70px
    &:nth-child(2n)
      background: #F5F7FA
    &:hover
      background: #F7FAF5
    .list-item
      no-wrap()
      font-size: $font-size-14
    // 双行样式
    .list-double-row
      .item-sub
        no-wrap()
        line-height: 1
        margin-top: 8px
        font-size: $font-size-14
        color: $color-text-assist
      .item-dark
        no-wrap()
        font-size: $font-size-14
        line-height: 1

.pagination-box
  height: 70px
  align-items: center
  display: flex

.btn-main
  position: relative
  .file-box
    position: absolute
    top: 0
    left: 0
    width: 84px
    height: 28px
    opacity: 0

.edit-input-box
  .ivu-date-picker-rel, .ivu-input-wrapper, .ivu-input
    height: 100%
  .ivu-input
    color: $color-text-assist
    font-family: $font-family-regular
  .ivu-input-icon
    height: 100%
    line-height: 44px
  .ivu-select-dropdown
    width: 240px !important
    left: 105 !important

.back
  left: 0
  right: 0
  bottom: 0
  position: fixed
  z-index: 10
  background: #F9F9F9
  height: 80px
  border-radius: 0 0 6px 6px
  display: flex
  align-items: center
  padding-left: 40px
  box-sizing: border-box
  justify-content: center
  .back-btn
    box-sizing: border-box
    font-size: $font-size-16
    margin-right: 20px
    height: 40px
    line-height: 40px
    width: 96px
    white-space: nowrap
    transition: all 0.3s
    text-align: center
    border-radius: 1px
  .back-submit
    background: $color-main
    color: $color-white
  .back-cancel
    box-sizing: border-box
    color: $color-text-main
    border-1px(#ACACAC, 1px)
    &:hover
      color: $color-text-sub
      border-color: $color-text-sub
  .btn-disable
    cursor: not-allowed
    background: $color-line
    color: $color-text-assist

.identification
  background: $color-white
  height: 70px
  display: flex
  align-items: center
  justify-content: space-between
  box-sizing: border-box
  .identification-page
    display: flex
    align-items: center
  .identification-icon
    width: 14px
    height: 14px
    margin-right: 5px
  .identification-name
    line-height: 1
    font-size: $font-size-16
    font-family: $font-family-regular
    color: $color-text-main

.function-btn
  display: flex

.down-content
  padding: 0 20px
  box-sizing: border-box
  height: 72px
  background: $color-white
  display: flex
  align-items: center
  margin-bottom: 20px
  .down-item
    display: flex
    margin-right: 30px
  .down-item-small
    margin-right: 10px
  .down-tip
    font-size: $font-size-12
    color: $color-text-main
    margin-right: 10px

.g-btn-item
  margin-left: 10px
