/**
 *  优化新改版规范
 *  tips:
 *  所有颜色命名均以用到的区域定义，这里只定义公共大类的颜色
 *  私有颜色写到private.styl
 */

// 主色区域
$color-main = #4DBD65 // 主颜色
$color-sub = #3e77c3 // 副颜色

// 背景色区域
$color-background = #F0F3F5 // 全局背景色
$color-background-light = #FFFFFF // 背景色亮
$color-background-list = #FAFAFC // 背景色列表
$color-bar-active = #0F1922 // 侧边栏active
$color-bar-bg = #1D2B36 // 侧边栏底色

// 辅助色区域
$color-line = #E9ECEE // 线条颜色
$color-disable = #E1E1E1 // 不可点击颜色
$color-positive = #4DBD65 // 积极状态颜色
$color-negative = #F84E3C // 消极状态颜色
$color-white = #FFFFFF

// 文字色区域
$color-text-main = #333333 // 主文字色
$color-text-sub = #82899C // 副文字色
$color-text-assist = #ACACAC // 辅助文字颜色

// 字体
$font-family-din = 'DIN Alternate'
$font-family-din-bold = 'DINAlternate-Bold'
$font-family-light = 'PingFangSC-Light'
$font-family-regular = 'PingFangSC-Regular'
$font-family-medium = 'PingFangSC-Medium'
$font-family-bold = 'PingFangSC-Semibold'
$font-family-impact = 'Impact'
$font-family-thin = 'PingFangSC-Thin'
$font-family-lucid = 'LucidaGrande'

